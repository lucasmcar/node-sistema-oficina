<%- include('../partials/header') %>
<div class="container">
    <form method="post" action="/user/create/new">
        <div class="form-group">
          <label for="usern">Usuario</label>
          <input type="text" class="form-control" id="usern" name="user">
        </div>
        <div class="form-group">
          <label for="passn">Senha</label>
          <input type="password" class="form-control" id="passn" name="pass">
        </div>

        <!--Campo será oculto-->
        <div class="form-group hidden-field" id="hidden-field"> 
            <label for="verify">Insira seu código de verificação</label>
            <input type="password" class="form-control" id="verify" name="verify">
        </div>

        <div class="form-group form-check" >
          <input type="checkbox" class="form-check-input" id="admin" name="admin" value="1">
          <label class="form-check-label" for="admin">É administrador?</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

